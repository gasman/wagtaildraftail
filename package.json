{
  "name": "wagtaildraftail",
  "version": "0.6.1",
  "description": "Draft.js editor for Wagtail, built upon Draftail",
  "main": "setup.py",
  "keywords": [],
  "author": "Springload",
  "license": "MIT",
  "homepage": "https://github.com/springload/wagtaildraftail#readme",
  "bugs": {
    "url": "https://github.com/springload/wagtaildraftail/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/springload/wagtaildraftail.git"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "IE 11"
            ]
          }
        }
      ],
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/wagtaildraftail/client/tests/styleMock.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/wagtaildraftail/client/tests"
    ]
  },
  "eslintConfig": {
    "extends": "springload",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ]
    }
  },
  "dependencies": {
    "draft-js": "^0.10.0",
    "draftail": "^0.6.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.22.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-springload": "1.0.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.10.3",
    "extract-text-webpack-plugin": "^2.0.0",
    "jest": "^19.0.2",
    "nightmare": "^2.10.0",
    "react-test-renderer": "^15.5.4",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "start": "webpack --config wagtaildraftail/client/webpack.config.dev.js --watch",
    "dist": "webpack --config wagtaildraftail/client/webpack.config.prod.js",
    "lint": "eslint wagtaildraftail/client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
